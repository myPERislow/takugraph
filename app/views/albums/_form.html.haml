= form_for @album do |f|
  - if @album.errors.any?
    .alert.alert-danger
      %ul
        - @album.errors.full_messages.each do |message|
          %li= message

  注文番号：
  - begin
    = f.label order.id
  - rescue => e
    = f.label order
  - begin
    = f.hidden_field :order_id, :value => order.id
  - rescue => h
    = f.hidden_field :order_id , :value => order
  - require = 10
  - addtional_plan = AddtionalPlan.where(order_id: order.to_i).first
  - require += addtional_plan.photo_number
  %br
  最低納品枚数: #{require}枚

  #example
    %sample_photographs_uploader

  .field
  　　　　= f.label '納品画像を選択'
    = f.file_field :photographs, multiple: true
  .action
    = f.submit '納品', class: 'btn btn-primary'

%script{:src => "./sample_photographs_uploader.js"}
