.container-fluid
  .row
    %nav.col-md-2.d-none.d-md-block.bg-light.sidebar
      .sidebar-sticky
        %ul.nav.flex-column
          %li.nav-item
            = link_to 'プロフィール編集', edit_user_registration_path ,class: 'nav-link'
          %li.nav-item
            = link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'nav-link'
          - unless current_user.member?
            %li.nav-item
              = link_to '依頼一覧', admin_orders_path , class: "nav-link"
          - if current_user.photographer?
            %li.nav-item
              = link_to '予定入力', users_add_schedule_path(id: @user.id), class: "nav-link"
    .col-md-10
      .page-header
      %h1 依頼一覧
      %table{:border => "1"}
        %tr
          %th id
          %th first_name
          %th last_name
          %th day
          %th location
          %th phone_number
          %th area
          %th photographer_id
          %th comment
          %th created_at
        - @orders.each do |order|
          %tr
            %td= order.id
            %td= order.first_name
            %td= order.last_name
            %td= order.day
            %td= order.location
            %td= order.phone_number
            %td= order.area.prefecture
            %td= order.photographer_id
            %td= order.comment
            %td= order.created_at
            - if order.album.nil?
              - if current_user.photographer?
                - if current_user.id = order_photographer_id
                  %td= link_to '納品', new_album_path(order: order) , :class => "btn btn-primary"
            %td= link_to '詳細', admin_order_path(order) , :class => "btn btn-primary"
            - if current_user.admin?
              %td= link_to '編集', edit_admin_order_path(order) , :class => "btn btn-primary"
              %td= link_to '削除', admin_order_path(order), :method => :delete, :confirm => "本当に削除していいですか?" , :class => "btn btn-primary"
