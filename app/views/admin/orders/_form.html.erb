<%= form_for @order,  :url => {:controller => :orders, :action => :create} do |f| %>
  <%= f.label :first_name%>
  <%= f.text_field :first_name %>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  <%= f.label :day %>
  <%= f.text_field :day %>
  <%= f.label :location %>
  <%= f.text_field :location %>
  <%= f.label :phone_number %>
  <%= f.text_field :phone_number %>
  <%= f.label :comment %>
  <%= f.text_field :comment %>
  <%= f.submit %>
<% end  %>
